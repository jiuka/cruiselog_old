<div class="item">
  <b>Listing ships</b>
</div>
<<div class="item">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Line</th>
      <th>Port of origin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ships.each do |ship| %>
      <tr>
        <td><%= ship.title %></td>
        <td><%= ship.line.title %></td>
        <td><%= ship.port_of_origin.title %></td>
        <td><%= link_to 'Show', ship %></td>
        <td><%= link_to 'Edit', edit_ship_path(ship) %></td>
        <td><%= link_to 'Destroy', ship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ship', new_ship_path %>
</div>
