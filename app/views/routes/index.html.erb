<div class="item">
  <b>Listing routes</b>
</div>
<<div class="item">
<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.from.title %></td>
        <td><%= route.to.title %></td>
        <td><%= route.title %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Route', new_route_path %>
</div>
